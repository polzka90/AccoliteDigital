@model AccountModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Close</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Close">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"></input>

            <label>Are you sure you want to close this account?</label>
            <div class="form-group">
                <input type="submit" value="Close" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
</div>